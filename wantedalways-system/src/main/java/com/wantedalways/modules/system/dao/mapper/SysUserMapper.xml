<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wantedalways.modules.system.dao.SysUserDao">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.wantedalways.modules.system.entity.SysUser">
        <id column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="username" property="name" />
        <result column="work_num" property="workNum" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
        <result column="position" property="position" />
        <result column="gender" property="gender" />
        <result column="email" property="email" />
        <result column="avatar" property="avatar" />
        <result column="status" property="status" />
        <result column="create_by" property="createBy" />
        <result column="create_time" property="createTime" />
        <result column="update_by" property="updateBy" />
        <result column="update_time" property="updateTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, user_id, username, work_num, password, salt, position, gender, email, avatar, status, create_by, create_time, update_by, update_time
    </sql>

    <select id="selectUserByUserId" resultType="com.wantedalways.modules.system.entity.SysUser">
        select <include refid="Base_Column_List"/> from sys_user where user_id = #{userId} and status != 0
    </select>
</mapper>
